html
  head
    style
      include styles.css
    title= title
  body
    form(method='POST' action='/loginHandler' class="login-form")
        if message
          div(class="validation-message")= message
        label(for='login') Login
        input(type='text' name='login')
        label(for='password') Password
        input(type='password' name='password')
        button(type='submit' class="button enter-button") Enter
        a(href="/" class="button cancel-button") Cancel
